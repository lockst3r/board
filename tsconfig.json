{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "types": [
      "node",
      "jest"
    ],
    "jsx": "react",
    "lib": [
      "dom",
      "es6",
      "es2017",
      "es2018.promise"
    ],
    "allowJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "declaration": false,
    "sourceMap": true,
    "noEmitOnError": true,
    "baseUrl": "./src",
    "outDir": "./build",
    "downlevelIteration": true,
    "noImplicitAny": false
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "build",
    "node_modules",
    "**/*.spec.ts"
  ]
}
